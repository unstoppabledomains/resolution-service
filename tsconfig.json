{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "outDir": "build",
      "resolveJsonModule": true,
      "esModuleInterop": true,
    },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js", "ormconfig.ts",
  ],
  "exclude": ["node_modules", "build"]
}